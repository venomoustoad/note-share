<h2>Note Detail</h2>

<div class = "row-fluid" style= "border:1px solid black">
	<div class = "span5">
		<div class = "row-fluid">
			Title: <%= @note.name%>
		</div>
		<div class = "row-fluid">
			Author: <%= User.find(@note.user_id).name%>
		</div>
		<div class = "row-fluid">
			Description: <%= @note.description%>
		</div>
		<div class = "row-fluid">
			Tags: <%#= note.%>
		</div>
	</div>
	<div class = "span5">
		<div class = "row-fluid">
			Subject:<%= @note.category_subject%>
		</div>
		<div class = "row-fluid">
			Grade:<%= @note.category_grade%>
		</div>
		<div class = "row-fluid">
			Board:<%= @note.category_board%>
		</div>
	</div>
	<div class = "span2">
		<div class = "row-fluid">
			Uploaded: <%= @note.updated_at%>
		</div>
	</div>
</div>
<div class = "row-fluid" style= "border:1px solid black">

<iframe src="<%= @note.source.url%>" width="100%" height="10"
        style="height:30em"
        marginwidth="0" marginheight="0">
</iframe>

</div>
<div class = "row-fluid" id="comments">
    Comments:<br/>
	<%if user_signed_in? %>
	<div id="rating" class = "span8">
    <form  name="commentform" action="index.jsp" method="POST" onsubmit="return(validate());">
    <input type="text" name="comment" size="150"><br/>
    <input type="reset" name="reset" value="Reset">
    <input type="submit" name="submit" value="Comment">
	</form>
	<%end%>
	</div>
	<div id="rating" class = "span3">
        Ratings:<br/>
        <a href="#"><img src="/images/up.jpg" height="25" width="25"></a>123
        &nbsp; &nbsp;
        <a href="#"><img src="/images/down.jpg" height="25" width="25"></a>12
        <br/>
    </div>

    </div>
</div>

