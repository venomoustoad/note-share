<h2>Search Results</h2>
	<%= will_paginate %>
	
	<%@notes.each do |note|%>
		<a href = '/notes/<%=note.id%>'>
		<div class = "row-fluid" style= "border:1px solid black">
			<div class = "span5">
				<div class = "row-fluid">
					Title: <%= note.name%>
				</div>
				<div class = "row-fluid">
					Author: <%= User.find(note.user_id).name%>
				</div>
				<div class = "row-fluid">
					Description: <%= note.description%>
				</div>
			</div>
			<div class = "span5">
				<div class = "row-fluid">
					Subject:<%= note.category_subject%>
				</div>
				<div class = "row-fluid">
					Grade:<%= note.category_grade%>
				</div>
				<div class = "row-fluid">
					Board:<%= note.category_board%>
				</div>
			</div>
			<div class = "span2">
				<div class = "row-fluid">
					Rating
				</div>
				<div class = "row-fluid">
					<%if !note.stat_rating.nil?%><%= note.stat_rating%><%end%>
				</div>
			</div>
			</a>
		</div>	
	<%end%>
	<%= will_paginate %>