<h2>Search Results</h2>
	<%= will_paginate %>
	
	<%@notes.each do |note|%>
		<a href = '/notes/<%=note.id%>'>
		<div class = "row-fluid" style= "border:1px solid black; padding:5px;">
			<div class = "span5">
				<div class = "row-fluid">
					<h4> <span class="label label-default">Title</span><%= note.name%></h4> 
				</div>
				<div class = "row-fluid">
					<h6> <span class="label label-default">Author</span><%= User.find(note.user_id).name%></h6>
				</div>
				<div class = "row-fluid">
					Description: <%= note.description%>
				</div>
			</div>
			<div class = "span5">
				<div class = "row-fluid">
					Subject:<%= note.category_subject%>
				</div>
				<div class = "row-fluid">
					Grade:<%= note.category_grade%>
				</div>
				<div class = "row-fluid">
					Board:<%= note.category_board%>
				</div>
			</div>
			<div class = "span2">
				<div class = "row-fluid">
					Rating
				</div>
				<div class = "row-fluid">
					<%if !note.stat_rating.nil?%><%= note.stat_rating%><%end%>
				</div>
			</div>
		</div>	
		</a>
	<%end%>
	<%= will_paginate %>